<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical">

    <cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem
        android:id="@+id/swiperecyclerviewitem_left"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        app:srvi_bottomMode="layDown"
        app:srvi_swipeDirection="left">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="#FFFF0000"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_swipeitem_bottomview1"
                style="@style/WrapWrap"
                android:gravity="center"
                android:onClick="onClick"
                android:text="BottomView" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:padding="5dp"
            android:gravity="center">

            <TextView
                style="@style/WrapWrap"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:text="顶部测试文案" />

            <Button
                android:id="@+id/btn_swipeitem_topview1"
                style="@style/WrapWrap"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:padding="5dp"
                android:text="TopView" />

        </RelativeLayout>

    </cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem>

    <Button
        android:id="@+id/btn_swipeitem_openleft"
        style="@style/MatchWrap"
        android:onClick="onClick"
        android:text="打开" />

    <Button
        android:id="@+id/btn_swipeitem_closeleft"
        style="@style/MatchWrap"
        android:onClick="onClick"
        android:text="关闭" />

    <Button
        android:id="@+id/btn_swipeitem_statusleft"
        style="@style/MatchWrap"
        android:onClick="onClick"
        android:text="获取状态" />


    <cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem
        android:id="@+id/swiperecyclerviewitem_right"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        app:srvi_bottomMode="layDown"
        app:srvi_springDistance="20dp"
        app:srvi_swipeDirection="right">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="#FFFF0000"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_swipeitem_bottomview2"
                style="@style/WrapWrap"
                android:gravity="center"
                android:onClick="onClick"
                android:text="BottomView" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_swipeitem_topview2"
                style="@style/WrapWrap"
                android:onClick="onClick"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:text="TopView" />

            <TextView
                style="@style/WrapWrap"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:text="顶部测试文案" />

        </RelativeLayout>

    </cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem>

    <Button
        android:id="@+id/btn_swipeitem_openright"
        style="@style/MatchWrap"
        android:onClick="onClick"
        android:text="打开" />

    <Button
        android:id="@+id/btn_swipeitem_closeright"
        style="@style/MatchWrap"
        android:onClick="onClick"
        android:text="关闭" />

    <Button
        android:id="@+id/btn_swipeitem_statusright"
        style="@style/MatchWrap"
        android:onClick="onClick"
        android:text="获取状态" />

</LinearLayout>
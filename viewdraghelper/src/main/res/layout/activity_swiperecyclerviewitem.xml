<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical">

    <cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem
        android:id="@+id/swiperecyclerviewitem"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:padding="10dp"
        app:srvi_bottomMode="layDown"
        app:srvi_springDistance="20dp"
        app:srvi_swipeDirection="left">
        <LinearLayout
            style="@style/WrapMatch.Horizontal"
            android:background="#FFFF0000"
            android:gravity="center_vertical"
            android:padding="5dp">
            <ImageView
                android:id="@+id/iv_swipeitem_delete"
                style="@style/WrapWrap"
                android:src="@mipmap/delete"
                android:onClick="onClick" />
        </LinearLayout>
        <LinearLayout
            style="@style/MatchMatch.Horizontal"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:padding="5dp">
            <ImageView
                android:id="@+id/iv_swipeitem_star"
                style="@style/WrapMatch"
                android:src="@mipmap/star"
                android:background="#FF00FF00"
                android:onClick="onClick" />
            <TextView
                style="@style/MatchWrap"
                android:padding="5dp"
                android:text="我是顶部测试文案啦啦啦啦" />
        </LinearLayout>
    </cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem>

    <LinearLayout style="@style/MatchWrap.Horizontal">
        <Button
            android:id="@+id/btn_swipeitem_open"
            style="@style/AutoWrap"
            android:onClick="onClick"
            android:text="打开" />
        <Button
            android:id="@+id/btn_swipeitem_close"
            style="@style/AutoWrap"
            android:onClick="onClick"
            android:text="关闭" />
        <Button
            android:id="@+id/btn_swipeitem_status"
            style="@style/AutoWrap"
            android:onClick="onClick"
            android:text="获取状态" />
    </LinearLayout>

    <cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        app:srvi_bottomMode="layDown"
        app:srvi_springDistance="20dp"
        app:srvi_swipeDirection="left">
        <LinearLayout
            style="@style/WrapMatch.Horizontal"
            android:background="#FFFF0000"
            android:gravity="center_vertical"
            android:padding="5dp">
            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/delete"/>
        </LinearLayout>
        <LinearLayout
            style="@style/MatchMatch.Horizontal"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:padding="5dp">
            <ImageView
                style="@style/WrapMatch"
                android:src="@mipmap/star"
                android:background="#FF00FF00" />
            <TextView
                style="@style/MatchWrap"
                android:padding="5dp"
                android:text="向左滑  ---+---  遮罩  ---+---  弹簧" />
        </LinearLayout>
    </cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem>

    <cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        app:srvi_bottomMode="pullOut"
        app:srvi_springDistance="20dp"
        app:srvi_swipeDirection="left">
        <LinearLayout
            style="@style/WrapMatch.Horizontal"
            android:background="#FFFF0000"
            android:gravity="center_vertical"
            android:padding="5dp">
            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/delete"/>
        </LinearLayout>
        <LinearLayout
            style="@style/MatchMatch.Horizontal"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:padding="5dp">
            <ImageView
                style="@style/WrapMatch"
                android:src="@mipmap/star"
                android:background="#FF00FF00" />
            <TextView
                style="@style/MatchWrap"
                android:padding="5dp"
                android:text="向左滑  ---+---  拉出  ---+---  弹簧" />
        </LinearLayout>
    </cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem>


    <cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        app:srvi_bottomMode="layDown"
        app:srvi_swipeDirection="right">
        <LinearLayout
            style="@style/WrapMatch.Horizontal"
            android:background="#FFFF0000"
            android:gravity="center_vertical"
            android:padding="5dp">
            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/delete"/>
        </LinearLayout>
        <LinearLayout
            style="@style/MatchMatch.Horizontal"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:padding="5dp">
            <ImageView
                style="@style/WrapMatch"
                android:src="@mipmap/star"
                android:background="#FF00FF00" />
            <TextView
                style="@style/MatchWrap"
                android:padding="5dp"
                android:text="向右滑  ---+--- 遮罩" />
        </LinearLayout>
    </cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem>

    <cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        app:srvi_bottomMode="pullOut"
        app:srvi_swipeDirection="right">
        <LinearLayout
            style="@style/WrapMatch.Horizontal"
            android:background="#FFFF0000"
            android:gravity="center_vertical"
            android:padding="5dp">
            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/delete"/>
        </LinearLayout>
        <LinearLayout
            style="@style/MatchMatch.Horizontal"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:padding="5dp">
            <ImageView
                style="@style/WrapMatch"
                android:src="@mipmap/star"
                android:background="#FF00FF00" />
            <TextView
                style="@style/MatchWrap"
                android:padding="5dp"
                android:text="向右滑  ---+--- 拉出" />
        </LinearLayout>
    </cn.bingoogolapple.acvp.viewdraghelper.widget.SwipeRecyclerViewItem>

</LinearLayout>